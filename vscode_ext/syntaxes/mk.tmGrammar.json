{
  "scopeName": "source.abc",
  "patterns": [{ "include": "#expression" }],
  "repository": {
    "expression": {
      "patterns": [{ "include": "#kw" }, { "include": "#constructor" }, { "include": "#commentLine" }, { "include": "#commentBlock" }, { "include": "#numbers" }]
    },
    "kw": {
      "match": "\\b(fresh|in|import)\\b",
      "name": "keyword.control"
    },
    "constructor": {
      "match": "\\b([A-Z][_0-9A-Za-z]*)\\b",
      "name": "constant.character"
    },
    "commentLine": {
      "match": "\\b(\/\/*\n)\\b",
      "name": "comment.line"
    },
    "commentBlock": {
      "match": "\\b(\/\/*)\\b",
      "name": "comment.block"
    },
    "numbers": {
      "match": "\\b([0-9]*)\\b",
      "name": "constant.character"
    }
  }
}
